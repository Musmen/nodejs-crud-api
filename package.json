    "@types/webpack": "^5.28.5",
    "cross-env": "^7.0.3",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "nodemon": "^3.1.7",
    "prettier": "3.3.3",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.12.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  }
