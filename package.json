{
  "name": "nodejs-crud-api",
  "version": "1.0.0",
  "description": "Nodejs CRUD API",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "register": "cross-env NODE_OPTIONS='--import=./register-ts-node.mjs'",
    "start:prod": "npm run register webpack && node ./dist/index.js",
    "start:dev": "npm run register nodemon --exec ts-node ./src/index.ts",
